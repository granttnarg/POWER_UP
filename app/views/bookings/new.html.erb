<%= render 'shared/navbar' %>
<h2>Pick your date to book "<%= @superpower.name%>"</h2>
<div class="pt-5" style="z-index: 100;padding-top: 400px; margin-top: 200px;">
  <%= simple_form_for [@superpower, @booking] do |f| %>
    <%= f.input :date %>
    <div align="center">
      <%= f.submit "Confirm Booking"%>
    </div>
  <% end %>
<div align="center">
  <p><%= link_to "Back to Super Power", superpower_path(@superpower), class: 'btn btn-flat mt-5' %></p>
  </div>
</div>
